turtle.width(5)
gongcha(rat*-2,rat*-5)
raw(-29, 240)
cir(-13,130)
line(-25, 175)
bug(-21, 83)
flower(-33, 65)
flower(20, 65)
below(-36, 8)


turtle.penup()
turtle.goto(0.8*rat,-12*rat)
turtle.color("white")
turtle.write("Gong cha", align="center", font=("Adobe Caslon Pro Bold", 60, "normal"))
